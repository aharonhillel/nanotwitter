
<div class="card" style="width: 18rem;">
  <div class="card-body">
    <strong class="d-block text-gray-dark"><a href="/users/<%= t.user.username %>"><%= t.user.username %></a></strong><h5 class="card-title">@<%= t.user.username %></h5>
    <p class="card-text"><%= t.content.to_s %></p>
    <div class="col text-right comment_box" data-id="<%= activity.id %>">
      <a class="participant mr-1"><i class="fas fa-users mr-1" title="participant"></i><span><%= activity.activity_participants.size %></span></a>
      <% if activity.liked?(current_user_id) %>
        <a class="like mr-1"><i class="fa fa-heart mr-1" title="unlike" data-toggle="button" aria-pressed="true"></i><span><%= activity.likes.size %></span></a>
      <% else %>
        <a class="like mr-1"><i class="far fa-heart mr-1" title="like" data-toggle="button" aria-pressed="false"></i><span><%= activity.likes.size %></span></a>
      <% end %>
      <a class="comment"><i class="far fa-comment mr-1" title="comment"></i><span><%= activity.comments.size %></span></a>
    </div>
    <button href="#" class="btn btn-primary">Like, comment, retweet</button>
    <button href="#" class="btn btn-primary">Comment, retweet</button>
    <button href="#" class="btn btn-primary">Retweet</button>
  </div>
</div>
